{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  }
}
