{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/server",
    "paths": {
      "~/*": ["./*"],
      "~client/*": ["./client/*"],
      "~common/*": ["./common/*"],
      "~server/*": ["./server/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "types": ["@types/node"]
  },
  "exclude": ["node_modules", "dist"]
}
